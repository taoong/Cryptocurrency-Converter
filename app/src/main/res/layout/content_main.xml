<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.taoong.cryptocurrencyconverter.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/editText"
        android:layout_width="228dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/edit_message"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="118dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="36dp"
        android:entries="@array/currency_arrays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_marginBottom="92dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="38dp"
        android:text="@string/convert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.151" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="68dp"
        android:text="USD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConvert" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="47dp"
        android:layout_height="30dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="56dp"
        android:text="DOGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="45dp"
        android:layout_height="22dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="40dp"
        android:text="BTC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/BTCvalue"
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="40dp"
        android:text="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/USDvalue" />

    <TextView
        android:id="@+id/DOGEvalue"
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="56dp"
        android:text="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTCvalue" />

    <TextView
        android:id="@+id/USDvalue"
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="68dp"
        android:text="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConvert" />

</android.support.constraint.ConstraintLayout>
